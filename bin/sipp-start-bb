#!/bin/bash
# start sipp-BB if not running

# usage $0 config-file...

# default config to start
if test $# -le 0; then
  set /etc/sipshaman/sipshaman.cf
fi

for cf in $*; do 
  source $cf
  ps axw | grep -q "sh .*/usr/bin/sipp-b[b].*$cf" -
  if test $? -eq 1; then # not found and ok to run
     $BIN/sipp-bb -cf $cf&
  fi

done